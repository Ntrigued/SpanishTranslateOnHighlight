{
  "manifest_version": 3,
  "name": "spanish-highlight-to-translate",
  "version": "1.0",
  "description": "Gives translation info when a Spanish phrase is highlighted",
  "permissions": [
      "storage"
  ],
  "host_permissions": [
      "https://api.openai.com/*"
  ],
  "content_scripts": [
      {
          "matches": [
              "*://*/*"
          ],
          "css": [
              "styles.css"
          ],
          "js": [
              "main.js"
          ]
      }
  ],
  "web_accessible_resources": [
      {
          "resources": [
              "library/*"
          ],
          "matches": [
              "<all_urls>"
          ]
      }
  ]
}